import PocketBase from "pocketbase";
const pb = new PocketBase("http://127.0.0.1:8090");

let error = "";
let message = "";
const cookies = Astro.cookies;

// ‚ö° Reconnexion via cookie
// R√©cup√©ration du token s‚Äôil existe
const token = cookies.get('pb_auth')?.value;

if (token) {
  pb.authStore.save(token);
}

let user = pb.authStore.model;

// Si on a un token valide mais pas encore le model
if (!user && pb.authStore.isValid) {
  await pb.collection('users').authRefresh();
  user = pb.authStore.model;
}

// ‚öôÔ∏è Traitement des formulaires
if (Astro.request.method === "POST") {
  const formData = await Astro.request.formData();
  const formType = formData.get("formType");

  const email = formData.get("email");
  const password = formData.get("password");
  const passwordConfirm = formData.get("passwordConfirm");

  try {
    if (formType === "register") {
      const name = formData.get("name");
      await pb.collection("users").create({
        email,
        password,
        passwordConfirm,
        name,
      });
      message = "‚úÖ Compte cr√©√©. Connectez-vous.";
    }

    if (formType === "login") {
      const authData = await pb
        .collection("users")
        .authWithPassword(email, password);
      Astro.cookies.set("pb_auth", pb.authStore.token, {
        path: "/",
        httpOnly: true,
      });
      return Astro.redirect("/auth");
    }

    if (formType === "logout") {
      pb.authStore.clear();
      Astro.cookies.delete("pb_auth");
      return Astro.redirect("/auth");

    }
  } catch (e) {
    console.error(e);
  }
}
console.log(pb.authStore.isValid);
console.log(pb.authStore.record?.id);
