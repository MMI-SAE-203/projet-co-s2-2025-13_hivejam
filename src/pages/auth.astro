<html>
  <head>
    <title>Auth</title>
    <style>
      body {
        font-family: sans-serif;
        padding: 2rem;
        max-width: 500px;
        margin: auto;
      }
      input,
      button {
        margin: 0.5rem 0;
        padding: 0.5rem;
        width: 100%;
      }
      form {
        margin-bottom: 2rem;
      }
      .error {
        color: red;
      }
