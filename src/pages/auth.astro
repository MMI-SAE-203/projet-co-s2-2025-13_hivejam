import "../styles/global.css";

import Pocketbase from "pocketbase";
const pb = new Pocketbase("https://hivejam.paolo-vincent.fr:443/");

const cookies = Astro.cookies;

// Donn√© user si connecter
const token = cookies.get("pb_auth")?.value;

if (token) {
  pb.authStore.save(token);
}

let user = pb.authStore.model;

if (!user && pb.authStore.isValid) {
  await pb.collection("users").authRefresh();
  user = pb.authStore.model;
}

// R√©cup√©ration formulaire
let message = "";
let errMessage = "";
if (Astro.request.method === "POST") {

  const formData = await Astro.request.formData();
  const formType = formData.get("formType");

  const email = formData.get("email");
  const password = formData.get("password");
  console.log(email);

  try {
    if (formType === "register") {
      const data = {
        email: formData.get("email"),
        password: formData.get("password"),
        passwordConfirm: formData.get("passwordConfirm"),
        name: formData.get("name"),
        subscription: "free",
      };
      console.log(data);
      await pb.collection("users").create(data);
      message = "‚úÖ Compte cr√©√©. Connectez-vous.";
    }

    if (formType === "login") {
      const authData = await pb
        .collection("users")
        .authWithPassword(email, password);
      Astro.cookies.set("pb_auth", pb.authStore.token, {
        path: "/",
        httpOnly: true,
      });
      return Astro.redirect("/");
    }
  } catch (err) {
    if (err.response?.data?.name?.message) {
      errMessage = "Le nom d'utilisateur est d√©j√† utiliser";
    } else if (err.response?.data?.email?.message) {
      errMessage = "L'adresse Email est d√©j√† utiliser";
    }
  }
}
