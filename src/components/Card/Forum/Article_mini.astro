---
import Book from "../../../assets/svg/Book.svg";

const article = Astro.props;
---

<a href=`actu/${article.id}` class="flex flex-col gap-2 p-2 border-t border-dark-gray">
    <h4 class="line-clamp-2">{article.title}</h4>
    <div class="flex gap-2.5 items-center tiny">
        <p>{article.date}</p>
        <span class="bg-dark-gray w-0.25 h-4"></span>
        <Book />
        <p>{article.reading_time} min</p>
    </div>
</a>