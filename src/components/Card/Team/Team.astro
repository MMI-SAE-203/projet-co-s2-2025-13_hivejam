---
import Crown from "../../../assets/svg/Crown.svg";

const {...team} = Astro.props;
---

<a href=`/mes_jams/${team.id}`>
    <article class="border-1 border-drak-gray p-3 flex flex-col justify-between w-110 rounded-md">
        <div class="flex gap-2">
            <img src={team.image_URL} alt="" class="h-28"/>
            <div class="flex flex-col gap-2">
                <h3>{team.expand.game_jam?.name}</h3>
                <p class="tiny line-clamp-2">{team.expand.game_jam?.description}</p>
            </div>
        </div>
        <div class="flex flex-col">
            <p>{team.time_info}</p>
            <span class="font-black text-negative text-4xl self-center">12 : 34 : 56</span>
        </div>
        <div class="self-end">
            <Crown />
        </div>
    </article>
</a>
